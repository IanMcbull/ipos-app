{
  "name": "ipos",
  "version": "1.1.0",
  "main": "main.js",
  "description": "A simple and elegant point of sale",
  "private": true,
  "author": {
    "name": "Ian Mugenya",
    "email": "ianmugenya@gmail.com"
  },
  "build": {
    "appId": "ipos.app",
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "publish": [
      {
        "owner": "Ian Mugenya",
        "provider": "github",
        "repo": "IPOS"
      }
    ],
    "directories": {
      "buildResources": "dist",
      "output": "release"
    },
    "win": {
      "target": "nsis-web",
      "icon": "dist/tab-icon.png"
    }
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "release": "electron-builder -p always",
    "electron:build": "vue-cli-service build --mode production && electron-builder build"
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "axios": "^0.26.1",
    "chart.js": "^2.9.4",
    "core-js": "^3.8.3",
    "csvtojson": "^2.0.10",
    "electron-updater": "^5.0.1",
    "short-uuid": "^4.2.0",
    "uuid": "^8.3.2",
    "vue": "^2.6.14",
    "vue-chartjs": "^3.5.1",
    "vue-router": "^3.5.1",
    "vuetify": "^2.6.0",
    "vuex": "^3.6.2",
    "vuex-persistedstate": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@fortawesome/fontawesome-free": "^6.0.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^18.0.4",
    "eslint": "^7.32.0",
    "sass": "~1.32.0",
    "sass-loader": "^10.0.0",
    "vue-cli-plugin-vuetify": "~2.4.7",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.0"
  },
  "eslintConfig": {
    "root": false,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential"
    ],
    "parserOptions": {},
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
